extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div


      h1 Tired of boring software?


      p.lead.text-light
        | Software should be exciting, engaging and user-friendly. Let's transform the web together
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3


      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`${project.image_urls[0]}` width='550' height='550')
            h5= project.project_name
      
